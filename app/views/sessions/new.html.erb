<h2>Home Improvement Hub</h2>
<div class="panel">
    <h5>Please log in.</h5>
        <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label(:email, class: "form-label") %> <br><br>
            <%= f.email_field(:email, placeholder: "Email", class: "field-tag") %> 

            <%= f.label(:password, class: "form-label") %> <br><br>
            <%= f.password_field(:password_digest, placeholder: "Strong password", class: "field-tag") %>

            <br><br>

            <%= f.submit("Submit", class: "button") %>
        <% end %>
</div>

<br>

<div class="panel">
    <h5>New user?</h5>
        <%= form_tag(signup_path, method: :get) do %>
            <button type="submit" class="button">Sign up</button>
        <% end %>
</div>

<br>

<div class="panel">
    <h5>Other Sign In Options</h5>
    <%= form_tag("/auth/github", method: :post, data: {turbo: false}) do %>
        <button type="submit" class="button">Login with Github</button>
    <% end %>
</div>